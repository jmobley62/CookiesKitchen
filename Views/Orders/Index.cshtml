@model IEnumerable<CookiesKitchen.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Meal</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer.LastName, @order.Customer.FirstName</td>
                <td>@order.Meal.Name</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

